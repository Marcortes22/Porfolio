---
import { getRelativeLocaleUrl } from 'astro:i18n';
import getTranslation from 'src/helpers/getTranslation';
import Layout from '@Layouts/Layout.astro';

export const prerender = false;
const { id } = Astro.params;

const languaje = Astro.url.pathname.includes('/en') ? 'en' : 'es';

const currentLocale = getTranslation(Astro.url.pathname);
const singleProjectUrl = getRelativeLocaleUrl(languaje);
const { secctions } = currentLocale;
const { projectsSection } = secctions[1] || {};
const project = projectsSection?.projects?.[Number(id)] || {};
---

<Layout>
  <div class="w-full h-full flex items-start justify-around">
    <div>
      <a href={singleProjectUrl}> regresar al inicio</a>
      <img
        class="h-[150px]
    w-[200px]
    object-contain
    rounded-lg"
        transition:name={`projectImage${id}`}
        src={`../${project.images[0]}`}
        alt=""
      />
    </div>
    <h3
      class="text-2xl font-bold text-gray-800 dark:text-gray-100 cursor-default"
    >
      {project.title}
    </h3>
  </div>
</Layout>
