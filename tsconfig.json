{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/": ["./src/*"],
      "@Pages/*": ["src/pages/*"],
      "@Components/*": ["src/components/*"],
      "@Layouts/*": ["src/layouts/*"],
      "@Styles/*": ["src/styles/*"],
      "@Utils/*": ["src/utils/*"],
      "@Locales/*": ["src/locales/*"],
      "@Assets/*": ["src/assets/*"],
      "@Constants/*": ["src/constants/*"],
      "@Helpers/*": ["src/helpers/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
